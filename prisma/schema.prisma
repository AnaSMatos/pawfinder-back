generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model animalTypes {
  id    Int     @id(map: "animalTypes_pk") @default(autoincrement())
  type  String  @unique
  posts posts[]
}

model posts {
  id          Int         @id(map: "posts_pk") @default(autoincrement())
  userId      Int
  animalName  String
  animalType  Int
  description String
  image       String
  users       users       @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "posts_fk0")
  animalTypes animalTypes @relation(fields: [animalType], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "posts_fk1")
}

model users {
  id       Int     @id(map: "users_pk") @default(autoincrement())
  name     String
  email    String  @unique
  age      Int
  country  String
  region   String
  password String
  posts    posts[]
}
